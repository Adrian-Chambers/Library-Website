<%- include("partials/header"); -%>
<%- include("partials/navigation"); -%>

<h2 class="text-center display-4">Account</h2>

<form action="account" method="post">
<div class="text-center ml-auto mr-auto w-75">
    <div class="row form-group">
        <div class="col-6 text-left">
            <label>First Name: </label>
            <input class="form-control" name="firstName" value="<%=firstName%>" type="text" />
        </div>
        <div class="col-6 text-left">
            <label>Last Name: </label>
            <input class="form-control" name="lastName" value="<%=lastName%>" type="text" />
        </div>
    </div>
    <div class="form-group text-left">
        <label>Username: </label>
        <input class="form-control" name="username" value="<%=username%>" type="text" />
    </div>
    <div class="form-group text-left">
        <label>Password: </label>
        <input class="form-control" name="password" value="<%=password%>" type="text" />
    </div>
    <div class="form-group">
        <button class="btn btn-md btn-secondary" type="submit">Confirm</button>
    </div>
</div>
</form>

<%- include("partials/footer"); -%>
