<%- include("partials/header"); -%>
<%- include("partials/navigation"); -%>

<div class="jumbotron jumbotron2">
<div class="dark-container p-5">
<h2 class="text-center text-light display-4">Account</h2>

<form action="account" method="post">
<div class="text-center ml-auto mr-auto">
    <h6 class="error"><%=error%></h6>
    <div class="row form-group">
        <div class="col-6 text-left">
            <label>First Name: </label>
            <input class="form-control" name="firstName" value="<%=user.firstName%>" type="text" />
        </div>
        <div class="col-6 text-left">
            <label>Last Name: </label>
            <input class="form-control" name="lastName" value="<%=user.lastName%>" type="text" />
        </div>
    </div>
    <div class="form-group text-left">
        <label>Username: </label>
        <input class="form-control" name="username" value="<%=user.username%>" type="text" />
    </div>
    <div class="form-group text-left">
        <label>Password: </label>
        <input class="form-control" name="password" value="<%=user.password%>" type="text" />
    </div>
    <div class="form-group">
        <button class="btn btn-md btn-outline-light" type="submit">Confirm</button>
    </div>
</div>
</form>
</div>
</div>

<%- include("partials/footer"); -%>
