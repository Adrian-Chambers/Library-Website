<%- include("partials/header"); -%>
<%- include("partials/navigation-librarian"); -%>

<div class="bg-green p-4">
    <form action="/transactions" method="post">
        <div class="row input-group w-75 pl-5 pr-5 mx-auto">
            <input class="col-10 form-control" name="keyword" type="text"/>
            <button class="col-2 btn btn-outline-light" name="submit" type="submit">Search</button>
        </div>
    </form>
</div>

<div class="bg-light pb-5">
    <h2 class="text-center p-5">Transactions</h2>
    <div class="mx-auto w-75">
        <% if(results.length === 0) { %>
            <div class="text-center p-5">
                <h3>No transactions found.</h3>
            </div>
        <% } else {%>
        <% for(var i = 0; i < results.length; i++){ %>
        <%      var transaction = results[i];    %>
                <div class="row">
                    <div class="col-4">
                        <h4><%=transaction.book.title%></h4>
                        <h4>by <%=transaction.book.author%></h4>
                        <h4>ISBN: <%=transaction.book.isbn%></h4>
                    </div>
                    <div class="col-4">
                        <h4>Borrowed by <%=transaction.user.username%> on <%=transaction.borrowDate%></h4>
                    </div>
                <% if(transaction.isReturned === false) {  %>
                    <div class="col-4">
                        <h4 class="col-4 error">Not Returned</h4>
                    </div>
                <% } else { %>
                    <h4 class="col-4">Returned on <%=transaction.returnDate%></h4>
                <% } %>
                </div>
                <hr/>
        <% }} %>
    </div>
</div>

<%- include("partials/footer"); -%>