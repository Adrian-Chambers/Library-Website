<%- include("partials/header"); -%>

<h2 class="text-center display-4">Register</h2>

<form action="/register" method="post">
<div class="text-center ml-auto mr-auto w-75">
    <div class="row form-group text-left">
        <div class="col-6">
            <label>First Name</label>
            <input class="form-control" name="firstName" placeholder="first" type="text" />
        </div>
        <div class="col-6">
            <label>Last Name</label>
            <input class="form-control" name="lastName" placeholder="last" type="text" />
        </div>
    </div>
    <div class="form-group text-left">
        <label>Username</label>
        <input class="form-control" name="username" placeholder="username" type="text" />
    </div>
    <div class="form-group text-left">
        <label>Password</label>
        <input class="form-control" name="password" placeholder="password" type="password" />
    </div>
    <div class="form-group">
        <button class="btn btn-md btn-secondary" type="submit">Submit</button>
    </div>
</div>
</form>


<%- include("partials/footer"); -%>